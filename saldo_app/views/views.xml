<!-- <?xml version="1.0" encoding="utf-8"?> -->
<odoo>
    <!-- ########    VISTAS      ########## -->
    <record id="view_form_movimiento" model="ir.ui.view">
        <field name="name">view.form.sa.movimiento</field>
        <field name="model">sa.movimiento</field>
        <field name="arch" type="xml">
            <form>
                <!-- estilo de hoja -->
                <sheet>
                    <!-- columna -->
                    <group>
                        <field name="name" required="1"/>
                    </group>

                    <group>
                        <field name="type_move"    required="1" widget="radio"/>
                        <field name="date"    required="1" />
                        <field name="amount"     required="1" />
                    </group>

                    <group>
                        <field name="tag_ids"     required="1" widget="many2many_tags"/>
                        <field name="categoria_id"    required="1" />
                    </group>

                    <group>
                        <field name="notas" widget="html_frame" required="1"/>
                    </group>
                    
                    <group>
                        <field name="receipt_image" widget="img"    required="1" />
                    </group>
                    

                </sheet>
            </form>
        </field>
    </record>
    
    <!-- ## ACCIONES DE VENTANA -->
    <record id="action_view_movimiento" model="ir.actions.act_window">
        <field name="name">Movimientos</field>
        <field name="res_model">sa.movimiento</field>
    </record>

    <record id="action_view_categoria" model="ir.actions.act_window">
        <field name="name">Categorias</field>
        <field name="res_model">sa.category</field>
    </record>

    <record id="action_view_tag" model="ir.actions.act_window">
        <field name="name">Etiquetas</field>
        <field name="res_model">sa.tag</field>
    </record>
     <!-- ## END ACTICIONES DE VENTANA -->

    
    
    <!-- ######  MENUS  ######### -->



    <!-- #menu principal -->
   <menuitem
        id="menu_main_saldoapp"
        name="SALDO APP"
        action="saldo_app.action_view_movimiento"
        parent=""/> 

    <!-- ## sub-menus -->
    <menuitem
        id="menu_movimiento"
        name="Movimientos"
        parent="saldo_app.menu_main_saldoapp"
        action="saldo_app.action_view_movimiento"/>

    <!-- poner en modo de conbox el menu -->
    <menuitem
        id="menu_ajustes"
        name="AJUSTES"
        parent="saldo_app.menu_main_saldoapp"
        action="saldo_app.action_view_categoria" />

    <menuitem
        id="menu_categorias"
        name="Categorias"
        parent="saldo_app.menu_ajustes"
        action="saldo_app.action_view_categoria"/>
    <menuitem
        id="menu_tag"
        name="Etiquetas"
        parent="saldo_app.menu_ajustes"
        action="saldo_app.action_view_tag"/> 




</odoo>
