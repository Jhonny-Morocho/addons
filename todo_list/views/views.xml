<odoo>
  <data>

    <!-- personalizar formularios vista -->
    <record id="view_tree_todo" model="ir.ui.view">
      <field name="name">view.tree.todo</field>
      <field name="model">todo_app</field>
      <!-- ##cuerpo de la vista -->
      <field name="arch" type="xml">
          <tree >
            <field name="name" string="El titulo" />
            <field name="description" string="Explicacion de tarea" />
            <field name="state" />
          </tree>
      </field>
    </record>

    <!-- personalizar vista de tipo formulario -->
    <record id="view_form_todo" model="ir.ui.view">
      <field name="name">todo_app.view.form.todo</field>
      <field name="model">todo_app</field>
      <!-- ##cuerpo de la vista -->
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group string="InformaciÃ³n">
                <field name="name" />
                <field name="description" />
              </group>
              <group string="El estado es en estring">
                <field name="state" />
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <!-- accion de ventana -->
    <record model="ir.actions.act_window" id="action_view_todo">
      <field name="name">Lista de Tareas</field>
      <field name="res_model">todo_app</field>
    </record>

    <!-- registro de menu item -->
    <menuitem
      id="menu_main_todo"
      name="Todo app"
      action="action_view_todo"
      parent=""/>
